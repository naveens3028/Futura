<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UpMyRanks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/window_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
    </style>


    <style name="sfl_TextAppearanceStateDefault" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/divider_color</item>
    </style>

    <style name="sfl_StateImage">
        <item name="android:layout_marginBottom">@dimen/sfl_global_keyline_s</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>
</resources>