<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:orientation="vertical">

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/html_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4sdp"
        android:background="@drawable/rounded_circle_filled"
        android:backgroundTint="@color/alice_blue"
        android:drawableEnd="@drawable/ic_circle_outline"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/charcoal"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_circle_filled"
            android:backgroundTint="@color/alice_blue"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />


        <io.github.kexanie.library.MathView
            android:id="@+id/formula_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:engine="MathJax"
            android:visibility="gone"
            auto:text="When \\(a \\ne 0\\), there are two solutions to \\(ax^2 + bx + c = 0\\)
        and they are $$x = {-b \\pm \\sqrt{b^2-4ac} \\over 2a}.$$" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/rounded_circle_filled"
            android:backgroundTint="@color/alice_blue">
            <com.jstarczewski.pc.mathview.src.MathView
                android:id="@+id/mvTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:engine="MathJax"
                android:background="#00000000"
                android:layout_gravity="left"
                app:text="$F=mg$"/>

            <ImageView
                android:id="@+id/imgSelectAns"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_circle_outline"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

