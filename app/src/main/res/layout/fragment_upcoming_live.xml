<?xml version="1.0" encoding="utf-8"?>
<com.trisys.rn.baseapp.helper.SimpleStatefulLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stateful"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/_450sdp">

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.UpcomingLiveFragment">

        <TextView
            android:id="@+id/noCompletedSession"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_upcoming_session_found"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.trisys.rn.baseapp.helper.NestedScrollableHost
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="2"
                tools:itemCount="3"
                tools:listitem="@layout/row_upcoming" />
        </com.trisys.rn.baseapp.helper.NestedScrollableHost>

    </FrameLayout>
</com.trisys.rn.baseapp.helper.SimpleStatefulLayout>