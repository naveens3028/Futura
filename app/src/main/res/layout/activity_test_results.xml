<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:outlineAmbientShadowColor="@color/divider_color"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="5dp"
        android:visibility="visible"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imgstud"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/students" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toRightOf="@id/imgstud"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/overall_performance"
                android:textColor="@color/orange"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ranktxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toRightOf="@id/rank"
                android:fontFamily="@font/roboto_bold"
                android:text="RANK"
                android:textColor="@color/redtext"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rank_img_rlt"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_toRightOf="@id/ranktxt">

                <ImageView
                    android:id="@+id/imgrank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rank" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="30"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rankoutof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rank"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toRightOf="@id/imgstud"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/rank_out_of"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/imgstud"
                android:layout_alignEnd="@id/ranktxt"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/divider_color" />



        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>