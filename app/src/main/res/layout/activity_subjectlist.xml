<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlt_subj"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:background="@color/purple_300"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtIndex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:minWidth="@dimen/_30sdp"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/_7sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chapternametxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:breakStrategy="simple"
                    android:textColor="@color/charcoal"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/chapterDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="0dp"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableStart="@drawable/ic_topic"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:breakStrategy="simple"
                        android:textColor="@color/greytext"
                        android:fontFamily="@font/roboto_regular"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/chapterDetailsMaterials"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableStart="@drawable/ic_materials"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="@string/app_name"
                        android:layout_weight="1"
                        android:breakStrategy="simple"
                        android:textColor="@color/greytext"
                        android:fontFamily="@font/roboto_regular"
                       />

                </androidx.appcompat.widget.LinearLayoutCompat>





            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
