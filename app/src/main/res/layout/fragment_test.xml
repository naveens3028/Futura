<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_6sdp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/overallPerformance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/overall_performance"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toStartOf="@+id/allResults"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/allResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/take_test_background"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/_5sdp"
                android:text="@string/all_results"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/overallPerformance" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tabView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@+id/carouselView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabGravity="fill"
                        android:background="@color/window_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tabIndicatorColor="@color/carolina_blue"
                        app:tabIndicatorGravity="stretch"
                        app:tabMode="fixed"
                        app:tabMaxWidth="0dp"
                        app:tabPaddingEnd="10dp"
                        app:tabPaddingStart="10dp"
                        app:tabSelectedTextColor="@android:color/white"
                        app:tabTextAppearance="@style/TabLayoutStyle"
                        app:tabTextColor="@color/carolina_blue">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test_txt" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/practice_txt" />

                    </com.google.android.material.tabs.TabLayout>

                    <View
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="0dp"
                        android:background="@color/window_background"
                        android:elevation="@dimen/_4sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/tabLayout"
                        app:layout_constraintEnd_toEndOf="@+id/tabLayout"
                        app:layout_constraintStart_toStartOf="@+id/tabLayout"
                        app:layout_constraintTop_toTopOf="@+id/tabLayout" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tabView">

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>