<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_12sdp"
    tools:context=".fragment.TestFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/overallperfromance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/overall_performance"
        android:textColor="@color/davys_grey"
        android:textSize="@dimen/_14sdp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:outlineAmbientShadowColor="@color/davys_grey"
        android:layout_below="@+id/overallperfromance"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imgstud"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/students"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rank"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:layout_toRightOf="@id/imgstud"
                android:text="@string/overall_performance"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@color/orange"
                android:textSize="@dimen/_10sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ranktxt"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:layout_toRightOf="@id/rank"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="RANK"
                android:textColor="@color/redtext"
                android:textSize="@dimen/_10sdp" />

            <RelativeLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_toRightOf="@id/ranktxt"
                android:id="@+id/rank_img_rlt">

                <ImageView
                    android:id="@+id/imgrank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rank"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="30"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_18sdp" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rankoutof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:layout_toRightOf="@id/imgstud"
                android:textStyle="bold"
                android:layout_below="@id/rank"
                android:text="@string/rank_out_of"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/imgstud"
                android:layout_alignEnd="@id/ranktxt"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/divider_color"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@id/rank_img_rlt">

            <androidx.cardview.widget.CardView
                android:id="@+id/crdavgscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/averagescore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:text="78.05%"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
            </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/averagescoretxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crdavgscore"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_alignEnd="@id/crdavgscore"
                    android:padding="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:text="Your Average score"
                    android:textSize="@dimen/_8sdp"
                    android:textAlignment="center"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/crdavgclassscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/purple_300"
                app:cardCornerRadius="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/averageclassscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="78.05%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

            </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/averageclassscoretxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crdavgclassscore"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_alignEnd="@id/crdavgclassscore"
                    android:padding="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:text="Class Average score"
                    android:layout_alignStart="@id/crdavgclassscore"
                    android:textSize="@dimen/_8sdp"
                    android:textAlignment="center"/>


                <androidx.cardview.widget.CardView
                android:id="@+id/crdavgtopperscore"
                android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/medium_sea_green"
                app:cardCornerRadius="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/averagetopperscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="@dimen/_5sdp"
                    android:text="78.05%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

            </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/avgtopperscoretxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crdavgtopperscore"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_alignEnd="@id/crdavgtopperscore"
                    android:padding="@dimen/_5sdp"
                    android:text="Topper Average score"
                    android:layout_alignStart="@id/crdavgtopperscore"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>